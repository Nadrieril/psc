\newcommand{\tracefonc}[2]{
\begin{figure}
\begin{center}
    \begin{pspicture}(0,0)(10,10)%%dimensions du dessin

    \psaxes[ticks=none,labels=none]{->}(0,0)(10,10)
    
    %%sans algebraic c'est la notation polonaise inversée
    \psplot[algebraic=true]{0}{9}{#1}
    
    \end{pspicture}
\caption{#2}
\end{center}
\end{figure}
}



